<h1>Listing rewards</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= link_to 'Show', [@publication, reward] %></td>
        <td><%= link_to 'Edit', edit_publication_reward_path(@publication, reward) %></td>
        <td><%= link_to 'Destroy', [@publication, reward], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

